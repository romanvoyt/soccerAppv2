<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.soccercountapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soccer game"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement table"
            android:textColor="#000"
            android:textSize="32sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32sp"
            android:textColor="#000"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 1"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="30sp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/team1Scores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:layout_marginLeft="80dp"/>

                <TextView
                    android:id="@+id/team1Reds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#ff0000"
                    android:layout_marginLeft="80dp"/>

                <TextView
                    android:id="@+id/team1Yellows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#EAD61C"
                    android:layout_marginLeft="80dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hit"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:background="#000"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="1dp"
                    android:onClick="goal1"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/red_card"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:background="#ff0000"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:onClick="incrReds1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="1dp"
                    android:background="#EAD61C"
                    android:onClick="incrYellows1"
                    android:padding="2dp"
                    android:text="@string/yellow_card"
                    android:textColor="#000"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 2"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="30sp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/team2Scores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:layout_marginLeft="80dp"/>

                <TextView
                    android:id="@+id/team2Reds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#ff0000"
                    android:layout_marginLeft="80dp"/>

                <TextView
                    android:id="@+id/team2Yellows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="#EAD61C"
                    android:layout_marginLeft="80dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hit"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:background="#000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="1dp"
                    android:onClick="goal2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/red_card"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:background="#ff0000"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:onClick="incrReds2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_card"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:background="#EAD61C"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="20dp"
                    android:padding="2dp"
                    android:onClick="incrYellows2"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="#000"
                android:text="Reset"
                android:textSize="24sp"
                android:textColor="#fff"
                android:onClick="reset"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:background="#000"
                android:text="Finish"
                android:textSize="24sp"
                android:textColor="#fff"
                android:onClick="winner"/>

        </LinearLayout>




    </LinearLayout>






</android.support.constraint.ConstraintLayout>
